
# using matmake2: https://github.com/laserskold/matmake2

midilib
  out = midilib
  src = src/*.cpp
  command = [static]

main
  in = @midilib
  out = main
  src = src/main/*.cpp
  command = [exe]

metaevent_test
  in = @midilib
  out = metaevent_test
  src = test/metaevent_test.cpp
  command = [test]

midimessage_test
  in = @midilib
  out = midimessage_test
  src = test/midimessage_test.cpp
  command = [test]

test
  in =
     @metaevent_test
     @midimessage_test
  includes =
     src

all
  in =
     @main
     @test
  includes =
    include
  config =
    c++2a
    Wall
  copy = data

